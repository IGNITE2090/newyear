<script>
window.onload = () => {
  const typing = document.getElementById("typing");
  const msg="üéÜ Happy New Year Wifey üéÜ";
  let i=0;
  typing.innerHTML="";
  (function type(){if(i<msg.length){typing.innerHTML+=msg.charAt(i++);setTimeout(type,100);}})();

  const music = document.getElementById("music");
  const surpriseText = document.getElementById("surpriseText");

  window.startMagic = () => {music.play(); startFireworks();};

  const newYear = new Date(new Date().getFullYear()+1,0,1);
  setInterval(()=>{
    const d = newYear - new Date();
    const daysEl = document.getElementById("days");
    const hoursEl = document.getElementById("hours");
    const minutesEl = document.getElementById("minutes");
    const secondsEl = document.getElementById("seconds");
    const nyText = document.getElementById("nyText");
    if(d<=0){
      nyText.innerText="üéâ HAPPY NEW YEAR WIFEY üéâ";
      surpriseText.style.display="block";
      startFireworks();
      return;
    }
    daysEl.innerText=Math.floor(d/86400000);
    hoursEl.innerText=Math.floor(d/3600000)%24;
    minutesEl.innerText=Math.floor(d/60000)%60;
    secondsEl.innerText=Math.floor(d/1000)%60;
  },1000);

  /* Hearts */
  for(let j=0;j<35;j++){
    let h=document.createElement("div");
    h.className="heart";
    h.innerHTML="üíó";
    h.style.left=Math.random()*100+"vw";
    h.style.animationDuration=(4+Math.random()*4)+"s";
    document.body.appendChild(h);
  }

  /* Love rain */
  setInterval(()=>{
    const l=document.createElement("div");
    l.className="love";
    l.innerHTML=["‚ù§Ô∏è","üíó","üíû","üíï"][Math.floor(Math.random()*4)];
    l.style.left=Math.random()*100+"vw";
    l.style.animationDuration=(5+Math.random()*4)+"s";
    document.body.appendChild(l);
    setTimeout(()=>l.remove(),9000);
  },300);

  /* Sparkles */
  document.addEventListener("click",e=>{
    for(let i=0;i<12;i++){
      let s=document.createElement("div");
      s.className="sparkle";
      s.style.left=e.clientX+"px";
      s.style.top=e.clientY+"px";
      s.style.background=`hsl(${Math.random()*360},100%,80%)`;
      document.body.appendChild(s);
      setTimeout(()=>s.remove(),1000);
    }
  });

  /* Fireworks */
  const c = document.getElementById("fireworks");
  const ctx = c.getContext("2d");
  c.width = innerWidth; c.height = innerHeight;
  let fw=[], pt=[];
  class F{constructor(x,y){this.x=x;this.y=c.height;this.t=y;this.c=`hsl(${Math.random()*360},100%,60%)`;}
    u(){this.y-=8;if(this.y<=this.t){for(let i=0;i<80;i++)pt.push(new P(this.x,this.y,this.c));return true;}}
    d(){ctx.fillStyle=this.c;ctx.fillRect(this.x,this.y,3,10);}
  }
  class P{constructor(x,y,c){this.x=x;this.y=y;this.c=c;this.dx=(Math.random()-0.5)*7;this.dy=(Math.random()-0.5)*7;this.l=100;}
    u(){this.dy+=0.05;this.x+=this.dx;this.y+=this.dy;this.l--;}
    d(){ctx.beginPath();ctx.arc(this.x,this.y,2,0,Math.PI*2);ctx.fillStyle=this.c;ctx.fill();}
  }
  function startFireworks(){ setInterval(()=>{for(let i=0;i<4;i++) fw.push(new F(Math.random()*c.width,Math.random()*c.height/2)); },1200); }
  (function anim(){
    ctx.fillStyle="rgba(0,0,0,0.2)";
    ctx.fillRect(0,0,c.width,c.height);
    fw=fw.filter(f=>{f.d();return !f.u();});
    pt=pt.filter(p=>{p.u();p.d();return p.l>0;});
    requestAnimationFrame(anim);
  })();
  window.addEventListener("resize",()=>{c.width=innerWidth;c.height=innerHeight;});
};
</script>
